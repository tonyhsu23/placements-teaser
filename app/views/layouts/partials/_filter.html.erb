<div class="mt-3 mb-3">
  <%= form_tag locals[:path], method: :get do  %>
    <div class="row">
      <div class="form-group col-4">
        <%= text_field_tag :keyword, params[:keyword], placeholder: 'filter by keyword', class: 'form-control' %>
      </div>
      <div class="col-2">
        <%= submit_tag 'apply', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
