<div class="row mt-5 mb-5">
  <h3>Invoices</h3>
  <div class="col-2">
    <%= link_to 'Create Invoice', '#createInvoiceModal',
                class: 'btn btn-primary', 'data-toggle' => 'modal' %>
  </div>
</div>

<div class="modal fade" id="createInvoiceModal" tabindex="-1" role="dialog"
  aria-labelledby="createInvoiceModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createInvoiceModal">Create Invoice</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_for :invoice do |f| %>
        <div class="modal-body form-group">
          <div class="form-group">
            <label for="campaingsSelectLabel">Campaigns</label>
            <%= f.select :campaigns, @campaigns_select, {}, multiple: true, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Create', class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
